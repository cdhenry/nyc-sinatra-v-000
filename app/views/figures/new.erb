<form action="/figures" method="post">
  <label>Name: <input type="text" name="figure[name]"></label>
  <br><br>
  
  <label>Choose an existing Title:</label>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="<%=title.id%>" value="<%=title.id%>"><%=title.name%></input>
  <%end%>
  <br></br>
  <label>and/or, create a new Title:</label>
  <input  type="text" name="title[name]"></input>

  <label>Choose an existing Landmark:</label>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input>
  <%end%>
  <br></br>
  <label>and/or, create a new Landmark:</label>
  <input  type="text" name="landmark[name]"></input>

  <br></br>
  <input type="submit" value="Create">
</form>
